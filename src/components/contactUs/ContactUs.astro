---
import Image from "astro/components/Image.astro";
import { listNavbar } from "../../utils";
import FormContact from "./FormContact.astro";
import type { NavbarMenu } from "../../interface";

const listSocialMedia: NavbarMenu[]= [
  {
    href:"http//www.facebook.com",
    icon: "/svg/socialMedia-facebook.svg",
    name: "facebook"
  },
  {
    href:"http//www.instagram.com",
    icon: "/svg/socialMedia-instagram.svg",
    name: "instagram"
  },
  {
    href:"http//www.linkedin.com",
    icon: "/svg/socialMedia-linkedin.svg",
    name: "linkedin"
  },
  {
    href:"http//www.behance.com",
    icon: "/svg/socialMedia-behance.svg",
    name: "behance"
  },
]

---

<section class="mx-auto max-w-[1440px] py-12">
  <article class="rounded-xl bg-white w-full h-fit flex flex-col lg:flex-row">
    <div
      class="w-full lg:w-[40%] h-full lg:border-r border-b border-gray-200 p-12 flex flex-col justify-between gap-y-10"
    >
      <section class="flex flex-col items-center">
        <div></div>
        <h3 class="text-4xl font-bold text-center">get the articles</h3>
        <p class="text-sm fonr-normal text-center">
          Lorem ipsum dolor sit amet consectetur adipisicing elit. Laborum
          architecto accusamus vitae dignissimos deleniti.
        </p>
      </section>
      <FormContact />
      <section class="flex items-center justify-center">
        <p class="text-xs font-normal text-center">
          Lorem ipsum dolor sit amet, consectetur adipisicing elit. Perspiciatis
          excepturi harum est cupiditate facilis eius eos tenetur eveniet minus
          nihil nemo delectus, obcaecati in minima soluta, autem molestias
          maxime iusto.
        </p>
      </section>
    </div>
    <div class="w-full lg:w-[60%] h-fit md:h-[530px]">
      <section
        class="w-full h-[50%] border-b border-gray-200 px-12 py-8 flex flex-col justify-end"
      >
        <h4 class="text-2xl font-bold">about this site</h4>
        <p>
          Lorem ipsum dolor sit amet consectetur adipisicing elit. Aliquid
          reiciendis consequuntur velit fugiat laudantium dignissimos enim eum
          porro nobis vel praesentium, voluptatum nisi! Veritatis id possimus
          atque necessitatibus. Eos, quidem?
        </p>
      </section>
      <section
        class="w-full h-[50%] grid grid-rows-1 md:grid-rows-2 grid-col-1 md:grid-flow-col"
      >
        <div
          class="row-span-2 col-span-1 p-14 flex flex-col gap-y-3 justify-end md:border-r border-gray-200"
        >
          <h4 class="text-2xl font-bold">about this site</h4>
          <ul class="flex flex-wrap gap-3">
            {
              listNavbar.map((menu) => (
                <li>
                  <a href={menu.href} class="flex gap-x-2 hover:bg-green-200 hover:transition-all hover:duration-200/80 p-1 rounded-lg">
                    <Image
                      src={menu.icon}
                      width={16}
                      height={16}
                      alt={menu.name}
                    />
                    {menu.name}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
        <div
          class="col-span-2 flex items-center justify-center border-b border-gray-200 py-5 md:p-0 border-t md:border-t-0"
        >
          <p>old design</p>
        </div>
        <div class="col-span-2 p-8 flex flex-col gap-y-3 justify-end">
          <h4 class="text-2xl font-bold">elsewhere</h4>
          <ul class="flex flex-wrap gap-3">
            {listSocialMedia.map(social => (
              <li>
                  <a href={social.href} class="flex items-center gap-x-2">
                    <Image
                      src={social.icon}
                      width={16}
                      height={16}
                      alt={social.name}
                    />
                    {social.name}
                  </a>
                </li>
            ))}
          </ul>
        </div>
      </section>
    </div>
  </article>
</section>
