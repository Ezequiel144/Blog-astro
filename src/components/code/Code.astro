      popular <span class="text-yellow-500">code</span>
    </h2>
    <p class="text-base font-semibold">explore code</p>
  </article>
  <ul class="flex flex-wrap justify-between gap-10">
    {
      filterTagsCode.map((card) => {
        const { tags, title, description } = card.frontmatter;
        let valueTag = tagCard.filter(
          (item: { name: string }) => item.name === tags[0]
        );
        return <CardMini tag={valueTag[0]} title={title} description={description} />;
      })
    }
  </ul>
</section>
