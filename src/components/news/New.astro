    {
      postFilterNews.map((data) => {
        const { image, tags, pubDate, title, description, slug } =
          data.frontmatter;
        let valueTag = tagCard.filter((item: { name: string }) =>
          tags.includes(item.name)
        );
        return (
          <Card
            image={image.url}
            tag={valueTag}
            date={pubDate}
            title={title}
            description={description}
            slug={slug}
          />
        );
      })
    }
  </ul>
</section>
