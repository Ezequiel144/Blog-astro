---
import Image from "astro/components/Image.astro";
import Tag from "./Tag.astro";
import Date from "./Date.astro";
import type { Cardpost } from "../../interface";
import type { TagsCard } from "../../interface/tagsCard.interface";

const { image, tag, date, title, description, slug } = Astro.props as Cardpost;

/* console.log(tag) */
---

<li class=" min-w-[300px] w-[48%] h-full rounded-lg shadow-lg">
  {/* imagen */}
  <a href={slug}>
    <Image
      src={image}
      class={"rounded-t-lg object-cover h-[60%] w-full"}
      width={620}
      height={300}
      alt={"image blog"}
    />
  </a>
  {/* contenedor de textos */}
  <section
    class="flex flex-col justify-between bg-white h-[40%] rounded-b-lg gap-y-5 p-10"
  >
    {/* contenedor de tags */}
    <article class="flex items-center gap-5 flex-wrap">
      {tag.map((item: TagsCard) => <Tag tag={item} />)}
      <!-- <Tag tag={tag} /> -->
      <Date date={date} />
    </article>
    <h3 class="text-5xl font-bold">{title}</h3>
    <p class="text-base font-regular">{description}</p>
  </section>
</li>
