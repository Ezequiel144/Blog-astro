---
import type { Cardpost } from "../interface";
import Tag from "./news/Tag.astro";

const { tag, title, description } = Astro.props as Cardpost;
---

<li
  class="bg-white rounded-lg w-[30%] min-h-[320px] p-10 flex flex-col gap-y-6 shadow-lg"
>
  <Tag tag={tag} />
  <section class="flex flex-col gap-y-2">
    <h3 class="text-3xl font-bold">{title}</h3>
    <p class="font-normal text-sm">{description}</p>
  </section>
</li>
